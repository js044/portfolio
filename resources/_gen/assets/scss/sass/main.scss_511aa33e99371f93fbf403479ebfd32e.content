@font-face{font-family:national park;src:url(../fonts/NationalPark-Regular.woff)}@font-face{font-family:national park;src:url(../fonts/NationalPark-Bold.woff);font-weight:700}:root{--color-background:#300f5b;--color-foreground:#ffc5fd;--color-accent:#fef0eb;--logo:url(/images/logos/pink_logo.png);--body-font:National Park}.lightmode{--color-background:#ffc5fd;--color-foreground:#300f5b;--color-accent:#55288f;--logo:url(/images/logos/blue_logo.png)}*{box-sizing:border-box}body{background-color:var(--color-background);color:var(--color-foreground);scrollbar-color:var(--color-background)var(--color-foreground);font-family:national park;transition:.5s ease-in}a{border:1px;color:var(--color-foreground);text-decoration:none}a:hover{color:var(--color-foreground);text-decoration:var(--color-foreground)wavy underline}.nav{display:flex;flex-direction:row;justify-content:space-between;margin:1.5em}.nav ul{font-size:1.1rem;text-transform:uppercase;list-style-type:none;padding-left:0;display:flex;flex-wrap:wrap}.nav ul li{padding:0 10px}.footer{display:flex;flex-direction:row;justify-content:space-between;margin:1.5em}.footer ul{text-transform:uppercase;list-style-type:none;padding-left:0;display:flex;flex-wrap:wrap}.footer ul li{padding-right:10px}.logo{background:var(--logo)50% no-repeat;background-size:contain;width:12rem;height:7rem;text-align:center;filter:drop-shadow(0 0 40px var(--color-foreground))}.logo:hover{transition:all .2s ease-in;filter:drop-shadow(0 0 30px var(--color-foreground))}.container{margin:2em}.light-mode-toggle{z-index:100;margin:-5px 0 0 10px;color:var(--color-foreground);border:2px solid;padding:4px;background:0 0;cursor:pointer;border-radius:5px;width:30px;height:30px}@media(max-width:767px){.nav{flex-direction:column;align-items:center;margin-top:2.5em}.nav ul li{padding:0 5px}.light-mode-toggle{position:absolute;top:20px;right:15px;font-size:18px}}